<?xml version="1.0" ?>

<!-- deltaSPH-full.xml
Add a MLS based correction to the Laplacian of the pressure. It is very
expensive, but great results can be expected.
-->

<sphInput>
    <Include file="@RESOURCES_OUTPUT_DIR@/Presets/cfd/MLS.xml" />
    <Tools>
        <Tool action="insert" before="cfd lap p" name="cfd lap p mls" type="copy" in="mls_fluid" out="mls"/>/>
        <Tool action="insert" before="cfd lap p" name="cfd lap p full" type="kernel" entry_point="full" path="@RESOURCES_OUTPUT_DIR@/Scripts/cfd/deltaSPH.cl"/>
    </Tools>
</sphInput>
