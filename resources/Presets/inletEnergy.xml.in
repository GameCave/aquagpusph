<?xml version="1.0" ?>

<!-- inletEnergy.xml
Computation of the energy injected by the inflow inside the system.

This preset depends on inlet.xml and fluidEnergy.xml.

Actually this preset only provide the power terms, without integrating them on
time.
-->

<sphInput>
    <Variables>
        <!-- Kinetic energy -->
        <Variable name="inlet_energy_dekindt" type="float*" length="N" />
        <Variable name="inlet_energy_dEkindt" type="float" value="0.0" />
        <!-- Potential energy -->
        <Variable name="inlet_energy_depotdt" type="float*" length="N" />
        <Variable name="inlet_energy_dEpotdt" type="float" value="0.0" />
        <!-- Compressibility energy -->
        <Variable name="inlet_energy_decomdt" type="float*" length="N" />
        <Variable name="inlet_energy_dEcomdt" type="float" value="0.0" />
        <!-- Internal energy -->
        <Variable name="inlet_energy_dEintdt" type="float" value="0.0" />
        <!-- Entropy -->
        <Variable name="inlet_energy_dSdt" type="float" value="0.0" />
    </Variables>

    <Tools>
        <!-- Extract the particles at the inflow from the fluid energy -->
        <Tool action="insert" after="Fluid Energy" type="kernel" name="Inlet Energy" path="@RESOURCES_OUTPUT_DIR@/OpenCL/Energy/InletEnergy.cl"/>
        
        <!-- Integrate them to the global energy components variation -->
        <Tool action="insert" after="Inlet Energy" type="reduction" name="Inlet dEkindt" in="inlet_energy_dekindt" out="inlet_energy_dEkindt" null="0.f">
            c = a + b;
        </Tool>
        <Tool action="insert" after="Inlet dEkindt" type="reduction" name="Inlet dEpotdt" in="inlet_energy_depotdt" out="inlet_energy_dEpotdt" null="0.f">
            c = a + b;
        </Tool>
        <Tool action="insert" after="Inlet dEpotdt" type="reduction" name="Inlet dEcomdt" in="inlet_energy_decomdt" out="inlet_energy_dEcomdt" null="0.f">
            c = a + b;
        </Tool>
        <!-- Deduce the internal energy and entropy -->
        <Tool action="insert" after="Inlet dEcomdt" type="set_scalar" name="Inlet dEintdt" in="inlet_energy_dEintdt" value="-inlet_energy_dEkindt - inlet_energy_dEpotdt"/>
        <Tool action="insert" after="Inlet dEintdt" type="set_scalar" name="Inlet dSdt" in="inlet_energy_dSdt" value="inlet_energy_dEintdt - inlet_energy_dEcomdt"/>
    </Tools>
</sphInput>
