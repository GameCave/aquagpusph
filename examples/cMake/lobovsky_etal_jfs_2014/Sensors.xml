<sphInput>
	<Sensors>
		<!-- Set the output rate. Sensors files will be updated by frames per
        second.
        -->
		<FPS value="10000.0" />
		<!-- Used kernel, it is strongly recommended to let the default one
        -->
		<Script file="@RESOURCES_DIR@/OpenCL/Sensors" />
		<!-- Add sensors. You can add as many sensors as you need.
		type="Interpolated": Ussual SPH interpolation will be performed.
		type="Maximum": Maximum value found at this position will be chosen
		-->
		<Sensor x="-1.01" y="0.003" type="Interpolated" />
		<Sensor x="-1.01" y="0.015" type="Interpolated" />
		<Sensor x="-1.01" y="0.030" type="Interpolated" />
		<Sensor x="-1.01" y="0.080" type="Interpolated" />
	</Sensors>
</sphInput>

