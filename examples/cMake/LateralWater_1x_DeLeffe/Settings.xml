<?xml version="1.0" ?>
<sphInput>
    <Settings>
        <!-- Verbose level:
         2 Slowest alternative, prints relevant data every timestep.
         1 (Default value) Prints relevant data when a frame must be printed.
         0 Fastest alternative, prints the minimum data as possible.
        -->
        <Verbose level="1" />
        <!-- Start mode:
         0 Starts at 0s.
         1 Uses last H5Part file printed as initial point.
        -->
        <Start mode="0" />
        <!-- OpenCL device used to compute.
        -->
        <Device platform="0" device="0" type="GPU" />
    </Settings>
</sphInput>

